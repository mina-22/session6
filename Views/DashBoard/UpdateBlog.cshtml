@model Blog
@{
    Layout = "_DashBoard";
}
<div class="top">
    <i class="uil uil-bars sidebar-toggle"></i>

    <div class="search-box">
        <i class="uil uil-search"></i>
        <input type="text" placeholder="Search here...">
    </div>

    <img src="images/profile.jpg" alt="">
</div>

<div class="dash-content">
    <div class="dash-content">
        <div class="overview">
            <div class="title">
                <i class="uil uil-tachometer-fast-alt"></i>
                <span class="text">Adding Blog</span>
            </div>
            
            <div>
                <form asp-action="SaveBlog" method="post" class="row">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Blog Name</label>
                        <input type="text" asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <input type="number" asp-for="Id" hidden/>
                    <div class="mb-3">
                        <label asp-for="Discription" class="form-label">Blog Description</label>
                        <textarea asp-for="Discription" class=" form-control"></textarea>
                         <span asp-validation-for="Discription" class="text-danger"></span>
                    </div>

                    <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Enable" type="checkbox" value="true" />
                            <label class="form-check-label" asp-for="Enable"> Enable Product Visible </label>
                            <span asp-validation-for="Enable"></span>
                        </div>
                    </div>

                    <div class="mb-3 col-lg-6">
                        <label asp-for="TypeId" class="form-label">Type</label>
                        <select class="form-select" asp-for="TypeId">
                         <option value="1">Romantic</option>
                            <option value="2">Action</option>
						</select>
                    </div>

                    <div class="col-lg-12 d-flex justify-content-center">

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>

            </div>
        </div>
    </div>

