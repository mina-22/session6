@model BlogType
@{
    Layout = "_DashBoard";
}
<div class="top">
    <i class="uil uil-bars sidebar-toggle"></i>

    <div class="search-box">
        <i class="uil uil-search"></i>
        <input type="text" placeholder="Search here...">
    </div>

    <img src="images/profile.jpg" alt="">
</div>

<div class="dash-content">
    <div class="dash-content">
        <div class="overview">
            <div class="title">
                <i class="uil uil-tachometer-fast-alt"></i>
                <span class="text">Adding Blog</span>
            </div>

            <div>
                <form asp-action="AddBlog" method="post" class="row" >
                    <div class="mb-3">
                        <label asp-for="blog.Name" class="form-label">Blog Name</label>
                        <input type="text" 
                               asp-for="blog.Name"
                               class="form-control"
                                />
                        <span asp-validation-for="blog.Name" class="text-danger"></span>
                    </div>
                   
                    <div class="mb-3">
                        <label asp-for="blog.Discription" class="form-label">Blog Description</label>
                        <textarea type="text"
                                  asp-for="blog.Discription"
                                  
                                  class="form-control"
                                  ></textarea>
                        <span asp-validation-for="blog.Discription" class="text-danger"></span>
                    </div>
                  
                    <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="blog.Enable" type="checkbox" value="true" />
                            <label class="form-check-label" asp-for="blog.Enable"> Enable Product Visible </label>
                            <span asp-validation-for="blog.Enable"></span>
                        </div>


                    </div>

                    <div class="mb-3 col-lg-6">
                        <label asp-for="blog.TypeId" class="form-label">type</label>
                        <select class="form-select"
                                asp-for="blog.TypeId">
                            @{

                                foreach(var t in Model.type)
                                {
                                    <option value="@t.Id">@t.Name</option>
                                }
                            }
                           
                        </select>
                    </div>

                    <div class="col-lg-12 d-flex justify-content-center">

                        <button type="submit" class="btn btn-primary" >Submit</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
